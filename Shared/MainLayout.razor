@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudAppBar Color="Color.Primary" Fixed="false" Dense="true" Elevation="4">
            <MudText Inline="true" Typo="Typo.h4">
                MIDI Piano Jukebox
            </MudText>
            <MudButton StartIcon="@Icons.Material.Filled.Home" Color="Color.Inherit" Href="/">Home</MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.QueueMusic" Color="Color.Inherit" Href="playlists">Playlists</MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.Settings" Color="Color.Inherit" Href="settings">Settings</MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.Help" Color="Color.Inherit" Href="about">About</MudButton>
        </MudAppBar>
    </MudAppBar>
    <MudMainContent>
        <MudPaper>@Body</MudPaper>        
    </MudMainContent>
</MudLayout>