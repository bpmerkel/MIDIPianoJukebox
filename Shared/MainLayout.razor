@inherits Microsoft.AspNetCore.Components.LayoutComponentBase
@using MIDIPianoJukebox.Data
@inject JukeboxService JukeboxService

<MatAppBarContainer>
    <MatAppBar Style="z-index: 100;" Class="mat">
        <MatAppBarRow>
            <MatAppBarSection>
                <MatAppBarTitle>MIDI Piano Jukebox</MatAppBarTitle>
            </MatAppBarSection>
            <MatAppBarSection Align="@MatAppBarSectionAlign.End">
                <MatIconButton Link="/" Icon="@MatIconNames.Home"></MatIconButton>
                <MatIconButton Link="playlists" Icon="@MatIconNames.Queue_music"></MatIconButton>
                <MatIconButton Link="settings" Icon="@MatIconNames.Settings"></MatIconButton>
                <MatIconButton Link="about" Icon="@MatIconNames.Help"></MatIconButton>
            </MatAppBarSection>
        </MatAppBarRow>
    </MatAppBar>
    <MatAppBarContent>
        @Body
    </MatAppBarContent>
</MatAppBarContainer>