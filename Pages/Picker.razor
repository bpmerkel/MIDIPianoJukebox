<MudStack>
    <MudText Typo="Typo.h6">Playlists</MudText>
    <MudList T="Playlist" Dense="true" SelectionMode="SelectionMode.SingleSelection" SelectedValueChanged="NavTo">
        @foreach (var p in Playlists)
        {
            <MudListItem Text="@($"{p.Name} ({p.Tunes.Count:#,##0})")" OnClick="@(() => NavTo(p))" Value="p" Style="white-space: nowrap" />
        }
    </MudList>
    <MudButton StartIcon="@Icons.Material.Filled.AddCircle" ButtonType="ButtonType.Button" OnClick="@AddNew" Style="text-align: left">Add playlist</MudButton>
</MudStack>