<MudChipSet T="Playlist" CheckMark="true" SelectionMode="SelectionMode.SingleSelection">
    @{
        var playlists = Playlists
            .Where(pp => pp.Tunes.Count > 0)
            .OrderBy(pp => pp.Name)
            .ToList();
        foreach (var p in playlists)
        {
            <MudChip T="Playlist" Text="purple" Color="Color.Secondary" Size="Size.Small" OnClick="@(() => NavTo(p))" Value="p">
                @p.Name (@p.Tunes.Count.ToString("#,##0"))
            </MudChip>
        }
    }
</MudChipSet>